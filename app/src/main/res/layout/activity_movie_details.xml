<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        tools:context=".activity.MovieDetailsActivity">

        <ImageView
            android:id="@+id/movie_poster"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/poster_bg"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_launcher_background" />

        <TextView
            android:id="@+id/overview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="Overview"
            android:padding="8dp"
            android:layout_marginBottom="10dp"
            android:textColor="#561313"
            android:background="#91d93a"
            android:layout_below="@id/movie_poster"/>

        <TextView
            android:id="@+id/lbl_movie_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="Movie Title"
            android:layout_marginBottom="10dp"
            android:layout_alignBaseline="@id/lbl_movie_title"
            android:textColor="#4f9e30"
            android:layout_below="@id/rating"/>

        <TextView
            android:id="@+id/lbl_language"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="Original Language"
            android:layout_marginBottom="10dp"
            android:textColor="#4f9e30"
            android:layout_alignBaseline="@id/txt_language"
            android:layout_below="@id/lbl_movie_title"/>

        <TextView
            android:id="@+id/lbl_release_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="Release Date"
            android:layout_marginBottom="10dp"
            android:layout_alignBaseline="@id/txt_release_date"
            android:textColor="#4f9e30"
            android:layout_below="@id/lbl_language"/>

        <TextView
            android:id="@+id/lbl_adult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="Adult"
            android:layout_alignBaseline="@id/txt_adult"
            android:layout_marginBottom="10dp"
            android:textColor="#4f9e30"
            android:layout_below="@id/lbl_release_date"/>

        <TextView
            android:id="@+id/txt_movie_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Some Title"
            android:textSize="16sp"
            android:fontFamily="sans-serif"
            android:textColor="#184880"
            android:layout_marginBottom="10dp"
            android:layout_toRightOf="@id/lbl_movie_title"
            android:layout_below="@id/rating"
            android:layout_alignParentRight="true"
            android:gravity="right"/>

        <TextView
            android:id="@+id/txt_language"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Some Language"
            android:textSize="16sp"
            android:fontFamily="sans-serif"
            android:textColor="#184880"
            android:layout_marginBottom="10dp"
            android:layout_toRightOf="@id/lbl_movie_title"
            android:layout_below="@id/txt_movie_title"
            android:layout_alignParentRight="true"
            android:gravity="right"/>

        <TextView
            android:id="@+id/txt_release_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Some Date"
            android:textSize="16sp"
            android:fontFamily="sans-serif"
            android:textColor="#184880"
            android:layout_marginBottom="10dp"
            android:layout_toRightOf="@id/lbl_release_date"
            android:layout_below="@id/txt_language"
            android:layout_alignParentRight="true"
            android:gravity="right"/>

        <TextView
            android:id="@+id/txt_adult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="true/false"
            android:textSize="16sp"
            android:fontFamily="sans-serif"
            android:textColor="#184880"
            android:layout_marginBottom="10dp"
            android:layout_toRightOf="@id/lbl_adult"
            android:layout_below="@id/txt_release_date"
            android:layout_alignParentRight="true"
            android:gravity="right"/>

        <RatingBar
            android:id="@+id/rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:rating="3.5"
            android:scaleX="0.5"
            android:scaleY="0.5"
            android:numStars="5"
            android:progressDrawable="@drawable/rating_bar"
            android:clickable="false"
            android:layout_marginBottom="20dp"
            android:layout_below="@id/overview"/>

        <ImageButton
            android:id="@+id/back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/lbl_adult"
            android:src="@drawable/back_arrow"
            android:layout_marginTop="60dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingRight="30dp"
            android:paddingLeft="30dp"
            android:background="@drawable/back_button_bg"/>





    </RelativeLayout>
</ScrollView>
